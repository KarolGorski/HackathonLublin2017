<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mojzesze.hackathonlublin2017.WeatherActivity"
    android:background="@drawable/pogoda2"
    >

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura: "
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="55dp" />

    <TextView
        android:id="@+id/tempView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="temp"
        tools:layout_editor_absoluteY="55dp"
        app:layout_constraintLeft_toRightOf="@+id/temp"
        android:layout_marginLeft="33dp" />

    <TextView
        android:id="@+id/rain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opady:"
        tools:layout_editor_absoluteX="99dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/temp" />

    <TextView
        android:id="@+id/rainView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rain"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tempView"
        app:layout_constraintLeft_toRightOf="@+id/rain"
        android:layout_marginLeft="33dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="269dp"
        android:layout_marginTop="277dp"
        app:layout_constraintTop_toBottomOf="@+id/rain"
        android:onClick="goToRoute"/>

    <TextView
        android:id="@+id/notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="notification"
        tools:layout_editor_absoluteX="246dp"
        tools:layout_editor_absoluteY="169dp" />
</android.support.constraint.ConstraintLayout>